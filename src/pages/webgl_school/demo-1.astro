---
import BaseLayout from "../../layouts/BaseLayout.astro";
import WebglElm from "../../components/WebglElm.astro";
const pageTitle = "WebGL School works | demo 1";
---
<BaseLayout pageTitle={pageTitle}>
	<WebglElm></WebglElm>
    <button id="js-countBtn" class="countBtn">achievement!!!</button>
    <script>
        import "../../scripts/demo-1.js";
    </script>
</BaseLayout>

<style lang="scss">
    body{
        position: relative;
    }
    .countBtn{
        position: absolute;
        bottom: 10%;
        left: 50%;
        padding: 1em 2em;
        border-radius: 2rem;
        border: none;
        font-size: 20px;
        font-weight: bold;
        color: #2256F2;
        background-color: rgba(255,255,255,0.7);
        transform: translateX(-50%) scale3d(1,1,1);
        transition: transform 0.4s;
        cursor: pointer;
        &:hover{
            transform: translateX(-50%) scale3d(1.1,1.1,1);
        }
    }
</style>